<div class="a4">
<h1>Zaloguj się jako pracodawca</h1>
	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>

<%= form_tag employers_path do %>
  <p>
    <%= label_tag :Login %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :Hasło %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag "Zaloguj się!" %></p>
<% end %>
</div>

