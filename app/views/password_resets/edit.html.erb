<h1>Update your password</h1>

<p>Wprowadź nowe hasło.</p>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
		<%= form_tag password_reset_path, :method => :put do %>

		  <%= label_tag :Nowe_hasło %><br />
		  <%= password_field_tag :password, nil, class: "form-control" %>

		  <%= label_tag :Powtórz_nowe_hasło %><br />
      	  <%= password_field_tag :password_confirmation, nil, class: "form-control" %><br />
		  
		  <%= hidden_field_tag :token, @token %><br>
		  <%= hidden_field_tag :email, @user.email %>

		  <%= submit_tag "Update Password", class: "btn btn-primary" %>
		  </div>
	</div> 
<% end %>